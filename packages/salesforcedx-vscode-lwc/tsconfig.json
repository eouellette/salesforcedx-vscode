{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2016"],
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "out",
    "preserveConstEnums": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "open": ["typings/open"]
    }
  },
  "exclude": ["node_modules", ".vscode-test", "out"]
}
